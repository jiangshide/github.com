<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/pink1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/publishImg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="@dimen/layout_size_5"
            android:alpha="0.6"
            android:background="@drawable/btn_round_pink"
            android:padding="@dimen/layout_size_5"
            android:text="图片"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_max_20" />

        <Button
            android:id="@+id/publishAudio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="@dimen/layout_size_5"
            android:alpha="0.6"
            android:background="@drawable/btn_round_pink"
            android:padding="@dimen/layout_size_5"
            android:text="音频"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_max_20" />

        <Button
            android:id="@+id/publishVideo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="@dimen/layout_size_5"
            android:alpha="0.6"
            android:background="@drawable/btn_round_pink"
            android:padding="@dimen/layout_size_5"
            android:text="视频"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_max_20" />
    </LinearLayout>

</FrameLayout>