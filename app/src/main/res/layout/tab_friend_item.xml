<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_size_10" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.zdb.android.view.CircleImageView
            android:id="@+id/tflHead"
            android:layout_width="@dimen/layout_size_60"
            android:layout_height="@dimen/layout_size_60"
            android:onClick="tflHead"
            android:src="@drawable/head1_bg"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/tflMsgNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/layout_size_5"
            android:background="@drawable/round_pink"
            android:padding="@dimen/layout_size_5"
            android:text="10" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_size_10"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tflName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="小仙儿 (油性皮肤)"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_max_18" />

        <TextView
            android:id="@+id/tflSign"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="我的痘痘已经好得差不多啦,真开心!"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tflFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_pink"
            android:padding="@dimen/layout_size_5"
            android:text="+ 关注"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tflTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-09" />
    </LinearLayout>

</LinearLayout>