<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F3" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_size_1"
        android:background="@color/n_line" />

    <RelativeLayout
        android:id="@+id/tabsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/layout_size_2"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/menutxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_menu_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/tab_tapeface_color"
            android:textSize="@dimen/layout_size_13" />
    </RelativeLayout>

    <TextView
        android:id="@+id/msgSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="@dimen/layout_size_3"
        android:background="@drawable/round_red"
        android:padding="@dimen/layout_size_5"
        android:visibility="gone"
         />

</FrameLayout>