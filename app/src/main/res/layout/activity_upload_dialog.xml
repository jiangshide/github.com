<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/layout_size_10"
        android:background="@color/gray_white"
        android:orientation="vertical"
        android:padding="@dimen/layout_size_10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/layout_size_10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宽度"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_size_max_16" />

            <SeekBar
                android:id="@+id/picW"
                android:layout_width="@dimen/layout_size_300"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:max="480"
                android:maxHeight="4.0dip"
                android:minHeight="4.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:progressDrawable="@drawable/po_seekbar"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/picWValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_size_max_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/layout_size_10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高度"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_size_max_16" />

            <SeekBar
                android:id="@+id/picH"
                android:layout_width="@dimen/layout_size_300"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:max="800"
                android:maxHeight="4.0dip"
                android:minHeight="4.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:progressDrawable="@drawable/po_seekbar"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/picHValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_size_max_16" />
        </LinearLayout>

        <Button
            android:id="@+id/take"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="从相机获取" />

        <Button
            android:id="@+id/pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="从图片库获取" />
    </LinearLayout>

</FrameLayout>