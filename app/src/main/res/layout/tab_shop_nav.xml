<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical" >

    <include layout="@layout/banner" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/layout_size_10"
        android:text="特惠妆"
        android:textColor="@color/redLight"
        android:textSize="@dimen/txt_size_max_20" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_size_5"
            android:layout_marginLeft="@dimen/layout_size_5"
            android:layout_marginRight="@dimen/layout_size_5"
            android:layout_marginTop="@dimen/layout_size_5"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/shopIndulgenceLeftImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/shopIndulgenceLeftPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="@drawable/btn_half_circle_bottom"
                android:paddingBottom="@dimen/layout_size_10"
                android:paddingLeft="@dimen/layout_size_5"
                android:paddingRight="@dimen/layout_size_5"
                android:paddingTop="@dimen/layout_size_10"
                android:textColor="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_size_5"
            android:layout_marginLeft="@dimen/layout_size_5"
            android:layout_marginRight="@dimen/layout_size_5"
            android:layout_marginTop="@dimen/layout_size_5"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/shopIndulgenceRightImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/shopIndulgenceRightPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="@drawable/btn_half_circle_bottom"
                android:paddingBottom="@dimen/layout_size_10"
                android:paddingLeft="@dimen/layout_size_5"
                android:paddingRight="@dimen/layout_size_5"
                android:paddingTop="@dimen/layout_size_10"
                android:textColor="@color/white" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_5"
        android:background="@color/white"
        android:padding="@dimen/layout_size_10"
        android:text="痘友推介"
        android:textColor="@color/redLight"
        android:textSize="@dimen/txt_size_max_20" />

    <LinearLayout
        android:id="@+id/shopRecommendL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size_5"
        android:background="@color/white"
        android:padding="@dimen/layout_size_10"
        android:text="美肤专区"
        android:textColor="@color/redLight"
        android:textSize="@dimen/txt_size_max_20" />

</LinearLayout>