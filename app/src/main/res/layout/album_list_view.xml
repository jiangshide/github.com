<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_size_10"
    android:background="@drawable/album_border"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/albumListImg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_size_100"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/albumListTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_size_5"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/pink"
            android:textSize="@dimen/txt_size_max_16" />
    </LinearLayout>

    <View
        android:id="@+id/albumListLine"
        android:layout_width="@dimen/layout_size_3"
        android:layout_height="fill_parent"
        android:background="@color/pink" />

</LinearLayout>